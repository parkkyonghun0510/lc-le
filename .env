# LC Workflow Backend Environment Configuration

# Application
DEBUG=true
SECRET_KEY=change-this-secret-key-in-production-make-it-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Server Configuration
HOST=0.0.0.0
PORT=8090

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:123456@localhost:5432/le_workflow

# Redis/DragonflyDB Configuration
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# MinIO Configuration (S3 Compatible Storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=lc-workflow-files
MINIO_SECURE=false

# S3 Aliases (for compatibility)
S3_ENDPOINT=localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=lc-workflow-files
S3_REGION=us-east-1
S3_USE_SSL=false

# File Upload Configuration
UPLOAD_DIR=static/uploads
MAX_FILE_SIZE=10485760

# Production Environment Variables (comment out for development)
# Use these for production deployment
# DATABASE_URL=postgresql+asyncpg://user:password@production-host:5432/lc_workflow
# REDIS_URL=redis://production-redis-host:6379
# MINIO_ENDPOINT=production-minio-endpoint
# MINIO_ACCESS_KEY=production-access-key
# MINIO_SECRET_KEY=production-secret-key
# MINIO_SECURE=true
# SECRET_KEY=your-super-secure-production-secret-key-here
# DEBUG=false