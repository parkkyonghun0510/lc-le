# =============================================================================
# LC WORKFLOW FRONTEND - PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains all environment variables needed for production deployment
# on Railway. Copy this file to .env.local and fill in the actual values.

# =============================================================================
# RAILWAY DEPLOYMENT CONFIGURATION
# =============================================================================

# Railway-specific environment variables
NODE_ENV=production
PORT=3000
NEXT_TELEMETRY_DISABLED=1

# Railway deployment optimization
RAILWAY_STATIC_URL=https://your-app.railway.app
RAILWAY_PROJECT_ID=your-railway-project-id
RAILWAY_ENVIRONMENT=production
RAILWAY_SERVICE_ID=your-railway-service-id

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API base URL - REQUIRED for production
# Format: https://your-backend-service.railway.app/api/v1
NEXT_PUBLIC_API_URL=https://your-backend.railway.app/api/v1

# WebSocket URL for real-time features (if applicable)
NEXT_PUBLIC_WS_URL=wss://your-backend.railway.app/api/ws

# API request timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=10000

# Force HTTPS in production
NEXT_PUBLIC_FORCE_HTTPS=true

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret for session encryption - REQUIRED for production
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-jwt-key-here-minimum-32-characters

# NextAuth configuration
NEXTAUTH_URL=https://your-app.railway.app

# Session configuration
NEXTAUTH_SESSION_MAX_AGE=86400
NEXTAUTH_SESSION_UPDATE_AGE=3600

# OAuth providers (if using external authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Password requirements
NEXTAUTH_PASSWORD_MIN_LENGTH=8
NEXTAUTH_PASSWORD_REQUIRE_SPECIAL=true

# Account lockout settings
NEXTAUTH_ACCOUNT_LOCKOUT_THRESHOLD=5
NEXTAUTH_ACCOUNT_LOCKOUT_DURATION=900

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection URL (if using direct database connection)
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Database connection pool settings
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10
# DATABASE_POOL_TIMEOUT=20000

# Redis configuration (for caching and sessions)
# REDIS_URL=redis://username:password@hostname:port/database

# =============================================================================
# FILE STORAGE & UPLOADS
# =============================================================================

# File upload configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# MinIO/S3 configuration (if using object storage)
# MINIO_ENDPOINT=https://your-minio.railway.app
# MINIO_ACCESS_KEY=your-minio-access-key
# MINIO_SECRET_KEY=your-minio-secret-key
# MINIO_BUCKET_NAME=your-bucket-name
# MINIO_SECURE=true

# AWS S3 configuration (alternative to MinIO)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=your-aws-region
# AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# PERFORMANCE MONITORING & ANALYTICS
# =============================================================================

# Performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1

# Analytics configuration
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Error tracking (Sentry, LogRocket, etc.)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production
# LOGROCKET_APP_ID=your-logrocket-app-id

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Log format (json, pretty)
LOG_FORMAT=json

# Enable/disable console logging
LOG_ENABLE_CONSOLE=true

# Log file path (if writing to file)
# LOG_FILE_PATH=/app/logs/app.log

# External logging service
# LOGTAIL_TOKEN=your-logtail-token
# PAPERTRAIL_HOST=your-papertrail-host
# PAPERTRAIL_PORT=your-papertrail-port

# =============================================================================
# SECURITY HEADERS & CORS
# =============================================================================

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline' 'unsafe-eval'
CSP_STYLE_SRC='self' 'unsafe-inline'
CSP_IMG_SRC='self' data: https:
CSP_CONNECT_SRC='self' https://your-backend.railway.app

# CORS configuration
CORS_ORIGIN=https://your-app.railway.app
CORS_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# EMAIL CONFIGURATION (if applicable)
# =============================================================================

# SMTP configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Email templates and configuration
# EMAIL_FROM=noreply@yourdomain.com
# EMAIL_TEMPLATES_PATH=/app/templates

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================

# Push notifications
# VAPID_PUBLIC_KEY=your-vapid-public-key
# VAPID_PRIVATE_KEY=your-vapid-private-key
# VAPID_EMAIL=admin@yourdomain.com

# SMS configuration (if applicable)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=your-twilio-phone-number

# =============================================================================
# FEATURE FLAGS & CONFIGURATION
# =============================================================================

# Feature toggles
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# Application configuration
NEXT_PUBLIC_APP_NAME=LC Workflow
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENVIRONMENT=production

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,km

# =============================================================================
# DEVELOPMENT & DEBUGGING (Production: false)
# =============================================================================

# Debug mode (disable in production)
NEXT_PUBLIC_DEBUG_MODE=false

# Development tools
NEXT_PUBLIC_ENABLE_DEVTOOLS=false

# Bundle analyzer (disable in production)
ANALYZE=false

# =============================================================================
# EXTERNAL SERVICE INTEGRATIONS
# =============================================================================

# Payment gateway (if applicable)
# STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
# STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Map services (if using location features)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Backup configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 0 2 * *
# BACKUP_RETENTION_DAYS=30

# Health check configuration
HEALTH_CHECK_PATH=/healthz
HEALTH_CHECK_TIMEOUT=300

# Maintenance mode
# MAINTENANCE_MODE=false
# MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# =============================================================================
# RAILWAY-SPECIFIC OPTIMIZATIONS
# =============================================================================

# Railway PostgreSQL (if using Railway database)
# DATABASE_URL=${{ Postgres.DATABASE_URL }}

# Railway Redis (if using Railway Redis)
# REDIS_URL=${{ Redis.REDIS_URL }}

# Railway environment variables
# NEXT_PUBLIC_API_URL=${{ your-backend-service.API_URL }}
# NEXT_PUBLIC_WS_URL=${{ your-backend-service.WS_URL }}

# =============================================================================
# PRODUCTION CHECKLIST
# =============================================================================
# Before deploying to production, ensure:
# 1. All secrets are generated with sufficient entropy
# 2. Database URLs use proper credentials
# 3. External service keys are valid
# 4. CORS origins are correctly configured
# 5. Security headers are appropriate
# 6. Logging is configured for production
# 7. Backups are enabled if needed
# 8. Health checks are working
# 9. All feature flags are set appropriately
# 10. Environment-specific configurations are correct