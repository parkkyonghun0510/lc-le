  "shortcuts": [
    {
      "name": "Upload File",
      "short_name": "Upload",
      "description": "Quickly upload a new file",
      "url": "/files/mobile?action=upload",
      "icons": [
        {
          "src": "/icon-upload-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Take Photo",
      "short_name": "Camera",
      "description": "Capture a document with camera",
      "url": "/files/mobile?action=camera",
      "icons": [
        {
          "src": "/icon-camera-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "View Files",
      "short_name": "Files",
      "description": "Browse uploaded files",
      "url": "/files/mobile",
      "icons": [
        {
          "src": "/icon-files-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "protocol_handlers": [
    {
      "protocol": "web+lcworkflow",
      "url": "/files/mobile?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/files/mobile?action=upload",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "application/pdf": [".pdf"],
        "application/msword": [".doc"],
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [".docx"],
        "text/plain": [".txt"]
      }
    }
  ],
  "share_target": {
    "action": "/files/mobile?action=share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "application/pdf", ".doc", ".docx", ".txt"]
        }
      ]
    }
  }
}